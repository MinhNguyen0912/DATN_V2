   function PrintBill(content){
   console.log(content)
       html2canvas(content, { scale: 2 }).then(function (canvas) {
           const imageURL = canvas.toDataURL("image/png");

           // Create an iframe for printing
           let iframe = document.createElement('iframe');
           iframe.style.position = "absolute";
           iframe.style.top = "-10000px";
           document.body.appendChild(iframe);

           const printWindow = iframe.contentWindow;
           const printDocument = printWindow.document;

           // Set the width to match A4 dimensions in pixels at 96 DPI (approx 8.27 inches by 11.69 inches)
           let imgWidth = 208;  // A4 size in mm (width of A4 in mm)
           let pageHeight = 297; // A4 size in mm (height of A4 in mm)

           // Calculate the image height to maintain aspect ratio
           let imgHeight = canvas.height * imgWidth / canvas.width;

           // Write the image to the iframe's document and adjust to fit A4 size
           printDocument.open();
           printDocument.write(`
        <html>
        <head>
          <style>
            body { margin: 0; }
            img { width: ${imgWidth}mm; height: auto; }
          </style>
        </head>
        <body>
          <img src="${imageURL}" />
        </body>
        </html>
      `);
           printDocument.close();

          

           // Wait for the image to load, then trigger the print
           printWindow.onload = function () {
               printWindow.focus();
               printWindow.print();

               // Clean up the iframe after printing
               setTimeout(function () {
                   document.body.removeChild(iframe);
               }, 100);
           };
       });

      
   }
